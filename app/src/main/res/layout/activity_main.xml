<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#9CA9B1">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Quantity"
		android:id="@+id/Quantity"
		android:textAllCaps="true"
		android:textStyle="bold"
		android:padding="20dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#DFDFDF"
		android:orientation="horizontal"
		android:padding="20dp"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/Quantity"
		android:id="@+id/lay">

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="-"
			android:layout_width="wrap_content"
			android:layout_alignParentLeft="true"
			android:id="@+id/rec"
			android:layout_below="@id/Quantity"
			android:onClick="minusValue"
			android:layout_toLeftOf="@+id/quantity_text_view"
			android:background="#898986"
			android:textColor="#FFFFFF"
			android:textSize="30sp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="0"
			android:textSize="16sp"
			android:id="@+id/quantity_text_view"
			android:textColor="#000000"
			android:layout_below="@id/Quantity"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:background="#ECECEC"
			android:layout_weight="1.0"
			android:typeface="sans"
			android:gravity="center"
			android:editable="true"
			android:inputType="number"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonStyleSmall"
			android:text="+"
			android:layout_width="wrap_content"
			android:layout_toRightOf="@id/quantity_text_view"
			android:layout_below="@id/Quantity"
			android:onClick="addValue"
			android:id="@+id/mainButton1"
			android:background="#898986"
			android:textColor="#FFFFFF"
			android:textSize="30sp"/>

	</LinearLayout>

	<TextView
		android:id="@+id/rut"
		android:layout_below="@id/lay"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:text="Price"
		android:textAllCaps="true"
		android:textStyle="bold"
		android:paddingTop="20dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="That will be "
		android:textStyle="bold"
		android:layout_below="@id/rut"
		android:paddingTop="20dp"
		android:paddingLeft="50dp"
		android:textColor="#714E4C"/>

	<TextView
		android:id="@+id/price_text_view"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/rut"
		android:layout_centerHorizontal="true"
		
		android:textColor="#000000"
		android:textStyle="bold"
		android:paddingTop="20dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Order"
		android:onClick="submitOrder"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@+id/rec"
		android:background="#838290"
		android:textColor="#FFFFFF"/>

</RelativeLayout>

